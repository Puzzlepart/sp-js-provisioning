{
    "compilerOptions": {
      "target": "es5",
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "outDir": "lib",
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@microsoft"
      ],
      "types": [
        "es6-promise",
        "sharepoint"
      ],
      "lib": [
        "ES2016",
        "DOM"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }
  